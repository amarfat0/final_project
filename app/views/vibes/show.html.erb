<div class="page-header">
  <h3>Vibe #<%= @vibe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @vibe.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/vibes" class="btn btn-primary">
        Back
      </a>
      <a href="/vibes/<%= @vibe.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_vibe/<%= @vibe.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
