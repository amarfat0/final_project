<div class="page-header">
  <h1>
    Destinations
    <a href="/destinations/new" class="btn btn-lg btn-success">New Destination</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Tag</th>
        <th>Image url</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Actions</th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.name %></td>
        <td><%= destination.description %></td>
        <td><%= destination.tag_id %></td>
        <td><%= destination.image_url %></td>
        <td><%= destination.latitude %></td>
        <td><%= destination.longitude %></td>
        <td>
          <a href="/destinations/<%= destination.id %>" class="btn btn-primary">Show</a>
          <a href="/destinations/<%= destination.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_destination/<%= destination.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
