<div class="page-header">
  <h3>Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Vibe</dt>
      <dd>
        <% if @tag.vibe.present? %>
          <a href="/vibes/<%= @tag.vibe_id %>">
            <%= @tag.vibe.name %>
          </a>
        <% end %>
      </dd>

      <dt>Destination</dt>
      <dd>
        <% if @tag.destination.present? %>
          <a href="/destinations/<%= @tag.destination_id %>">
            <%= @tag.destination.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tags" class="btn btn-primary">
        Back
      </a>
      <a href="/tags/<%= @tag.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tag/<%= @tag.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
